#!/usr/bin/env node

// Capture console output generated by a given HTML document.

const fs = require('fs');
const path = require('path');
const puppeteer = require('puppeteer');

async function main() {
  const fixturePath = process.argv[2];
  if (!fixturePath) {
    throw new Error('usage: browser-test </path/to/fixture.html>');
  }
  const fixtureUrl = `file://${path.resolve(fixturePath)}`;

  const browser = await puppeteer.launch();
  const page = await browser.newPage();
  // Propagate console output from page to stdout.
  page.on('console', (evt) => {
      console.log(evt.text());
  });
  await page.goto(fixtureUrl);
  await browser.close();
}

Promise.
  resolve(main()).
  catch((e) => {
    console.error(e.message);
    process.exit(1);
  });
